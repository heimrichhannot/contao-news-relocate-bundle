{
  "name": "heimrichhannot/contao-news-relocate-bundle",
  "type": "contao-bundle",
  "description": "Allow relocating a news article",
  "license": "GPL-3.0-or-later",
  "require": {
    "php": "^8.1",
    "contao/core-bundle": "^4.13 || ^5.0",
    "contao/news-bundle": "^4.13 || ^5.0",
    "symfony/http-foundation": "^5.4 || ^6.0",
    "symfony/http-kernel": "^5.4 || ^6.0"
  },
  "require-dev": {
    "symplify/easy-coding-standard": "^12.1",
    "rector/rector": "^1.0",
    "contao/contao-rector": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "HeimrichHannot\\NewsRelocateBundle\\": "src/"
    }
  },
  "extra": {
    "contao-manager-plugin": "HeimrichHannot\\NewsRelocateBundle\\ContaoManager\\Plugin"
  },
  "config": {
    "allow-plugins": {
      "contao-components/installer": true,
      "php-http/discovery": false
    }
  }
}
